                                                        <a class="product-name">
                                                            @if (Model.Product.DiscountedPrice != null)
                                                            {
                                                                <del>
                                                                    <span class="amount" style="color:dimgray">
                                                                        @Model.Product.Price.ToString("n0")
                                                                        <span>تومان</span>
                                                                    </span>
                                                                </del>
