@using Common.Application.FileUtil
@using WebApplication.Areas.Admin.Models.Sliders
@model List<SliderViewModel>
@{
    ViewData["title"] = "مدیریت اسلایدر";
    ViewData["selected"] = "Slider";
    var counter = 1;
}
<section class="content-header">
    <h1>
        @ViewData["title"]
    </h1>
    <ol class="breadcrumb">
        <li><a href="~/Admin"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li class="active">@ViewData["title"]</li>
    </ol>
</section>
<section class="content">
    <a class="btn btn-success" style="margin-bottom: 5px" asp-area="Admin" asp-controller="Slider" asp-action="Create">افزودن اسلایدر جدید</a>
    <div class="box box-primary ">
        <div class="box-body p-0">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>عکس</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@counter</td>
                                <td>
                                    <img style="max-width: 150px" src="@Directories.GetSliderImage(item.ImageName)" />
                                </td>
                                <td>
                                    <a asp-area="Admin" asp-controller="Slider" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-info btn-sm">ویرایش</a>
                                    <a asp-area="Admin" asp-controller="Slider" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger btn-sm">حذف</a>
                                </td>
                            </tr>
                            counter += 1;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>